{{#each this}}
<li class="country-info">
  <h2 class="country-name">{{name}}</h2>
  <div class="container">
    <div class="description__wraper">
      <p>Capital: {{capital}}</p>
      <p>Population: {{population}}</p>
      <ul class="languages-list">Languages:
        {{#each languages}}
        <li class="languages-list__item">{{name}}</li>
        {{/each}}
      </ul>
    </div>
    <div class="flag__wraper">
      <img src="{{flag}}" alt="Flag {{name}}" width="320">
    </div>
  </div>
</li>
{{/each}}